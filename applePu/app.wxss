/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.hidden{
  display: none
}

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loading.weui-loading_transparent {
  background-image: url(data:image/svg+xml;base64,);
}

.load-content {
  padding: 5px;
  color: #666;
}

.load-more-wrap {
  text-align: center;
  padding: 5px;
}

.modal {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  z-index: 200;
  width: 100%;
}

.modal-content {
  width: 100%;
  height: auto;
  margin: 0 auto;
  background: #fff;
  font-size: 30rpx;
  font-family: "微软雅黑";
  padding: 20rpx;
  position: fixed;
  bottom: 0rpx;
  box-sizing: border-box;
  text-align: justify;
}

.modal-line-box {
  margin: 30rpx 0rpx;
}

.clear {
  clear: both;
  width: 100%;
  height: 1rpx !important;
}

.modalTopSL {
  display: inline-block;
  width: 60% !important;
  height: 100%;
  float: left;
  font-size: 28rpx;
  text-align: left;
  line-height: 50rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.modalTopSR {
  display: inline-block;
  width: 20% !important;
  height: 100%;
  float: right;
  text-align: right;
  color: #8d8d8d;
  box-sizing: border-box;
}

.modalTopSL1 {
  font-size: 36rpx;
  font-weight: bold;
}

.modalTopSR1 {
  color: #f36201;
  font-size: 36rpx !important;
}

.modalTopSL2 {
  font-size: 28rpx;
  color: #8d8d8d;
}

.modalTopSM2 {
  width: 31% !important;
}

.modalTopSR2 {
  font-size: 32rpx;
  color: #f36201;
}
